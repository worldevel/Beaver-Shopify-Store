{% style %}
  #create_box_modal {
    position: fixed;
    bottom: 0;
    height: 261px;
    background-color: #eeeeef;
    z-index: 3;
    border: 2px solid #191919;
    border-bottom: none;
  }
  #box_level {
    width: 70%;
    max-width: 340px;
  }
  #box_level h3 {
    margin-bottom: 0;
    font-family: Poppins;
    font-size: 14px;
    font-weight: 600;
    line-height: 21px;
    letter-spacing: 0;
    text-align: right;
    color: #FA285A;
  }
  #box_level h3:first-child,
  #box_level h3:last-child {
    font-family: Poppins;
    font-size: 14px;
    font-weight: 600;
    line-height: 21px;
    letter-spacing: 0;
    text-align: left;
    color: #58565C;
  }
  #box_level p {
    font-family: Tiempos Headline;
    font-size: 20px;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: 0;
    text-align: left;
    padding: 10px 0;
    color: #aeaeaf;
    margin-bottom: 0;
  }
  #box_level span {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
    letter-spacing: 0;
    text-align: left;
    color: #fff;
    background-color: #b2b1b4;
    padding: 0 10px;
    margin-left: 10px;
  }
  .box_level_active p {
    font-size: 26px !important;
    line-height: 31px !important;
    padding: 11.5px 0;
    color: #191919 !important;
  }
  .box_level_active span {
    font-size: 16px !important;
    font-weight: 600 !important;
    background-color: #FA285A !important;
    padding: 5px 10px !important;
  }
  #box_logo {
    background-color: #fff;
    width: 30%;
    min-width: 120px;
    min-height: 120px;
    margin: 20px;
  }
  .level_divider {
    height: 2px;
    background-color: #58565C;
    margin: 0;
  }
  .level_progress {
    height: 30px;
    margin-bottom: 26.5px;
    border: 1px solid #58565C33;
  }
  .level_progress .progress-bar {
    background-color: #FA285A;
  }
  .level_weight {
    margin-top: 10px;
    height: 21px;
    position: relative;
  }
  .first_weight {
    position: absolute;
    left: 0;
  }
  .last_weight {
    position: absolute;
    right: 0;
  }
  .current_weight {
    position: absolute;
    left: calc(75% - 20px);
  }
  /* Carousel */

  #featureContainer .card img {
    width: 100%;
    padding: 10px;
  }
  .carousel-item h3 {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
    letter-spacing: 0em;
    text-align: center;
  }
  .carousel-item h2 {
    font-family: Tiempos Headline;
    font-size: 20px;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: 0em;
    text-align: center;
  }

  @media (max-width: 767px) {
  #featureContainer .carousel-inner .carousel-item > div {
    display: none;
  }
  #featureContainer .carousel-inner .carousel-item > div:first-child {
    display: block;
  }
}

  #featureContainer .carousel-inner .carousel-item.active,
  #featureContainer .carousel-inner .carousel-item-next,
  #featureContainer .carousel-inner .carousel-item-prev {
    display: flex;
  }
  @media(min-width: 768px) {

    #featureContainer .carousel-inner .carousel-item-end.active,
    #featureContainer .carousel-inner .carousel-item-next {
      transform: translateX(25%);
    }
    #featureContainer .carousel-inner .carousel-item-start.active,
    #featureContainer .carousel-inner .carousel-item-prev {
      transform: translateX(-25%);
    }

    #featureContainer .carousel-item {
      justify-content: space-between;
    }
  }

  #featureContainer .carousel-inner .carousel-item-end,
  #featureContainer .carousel-inner .carousel-item-start {
    transform: translateX(0);
  }
  #featureContainer .card {
    border: 0;
  }
  #featureContainer .card {
    position: relative;
  }
  #featureContainer .card .card-img-overlays {
    position: absolute;
    bottom: 15%;
    left: 10%;
  }
  #featureContainer a {
    text-decoration: none;
  }
  
  .box_name_group {
    padding-left: 50px;
  }
  
  #featureContainer .float-end {
    padding-top: 10px;
  }
  .indicator {
    width: 32px;
    height: 32px;
    background-color: #58565C66;
    color: white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
  }
  .box_detail_total {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0em;
  }
  .box_detail_price {
    font-family: Tiempos Headline;
    font-size: 34px;
    font-weight: 700;
    line-height: 41px;
    letter-spacing: 0em;
    text-align: left;
  }
  .box_detail_btn, .box_name_btn {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0em;
    padding: 0 2rem !important;
  }
  .box_give_name {
    font-family: Tiempos Headline;
    font-size: 54px;
    font-weight: 700;
    line-height: 65px;
    letter-spacing: 0em;
    text-align: left;
  }
  .box_name_detail {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    letter-spacing: 0em;
    text-align: left;
  }
  .box_item {
    max-width: 440px;
    border: none;
    border-bottom: 1px solid #191919;
    padding: 5px;
    width: 100%;
  }
  .toast-header strong {
    font-size: 30px;
    padding-left: 15px;
  }
  .toast-body {
    font-size: 16px;
    text-align: center;
  }
  .third_box {
    background-color: #02BE861A;
  }
  .box_done_handle button {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0em;
  }
  .box_done {
    padding-left: 50px;
  }
  .box_done h2 {
    font-family: Tiempos Headline;
    font-size: 54px;
    font-weight: 700;
    line-height: 65px;
    letter-spacing: 0em;
  }
  .box_done h4 {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0em;
  }
{% endstyle %}

<div class="container" id="create_box_modal">
  <div class="row h-100 first_box">
    <div class="col-12 col-sm-4 h-100">
      <div class="d-flex align-items-center h-100">
        <div id="box_logo">
          <img
            id="box_logo_img"
