  .account-news-title {
    font-family: Tiempos Headline;
    font-size: 54px;
    font-weight: 700;
    line-height: 65px;
    letter-spacing: 0;
    text-align: left;
    color: #191919;
  }
  .account-news-topic-1 {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0;
    text-align: left;
    color: #191919;
  }
  .account-news-topic-2 {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
    letter-spacing: 0;
    text-align: left;
    color: #191919;
  }
  .account-news-topic-2 span {
    color: #FA285A;
  }
  .account-news-sub-title {
    font-family: Tiempos Headline;
    font-size: 26px;
    font-weight: 700;
    line-height: 31px;
    letter-spacing: 0;
    text-align: left;
    color: #191919;
  }
  .account-news-desc {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    letter-spacing: 0;
    text-align: left;
    color: #58565C;
  }
  .account-news-btn {
    font-family: Poppins;
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
    letter-spacing: 0;
    text-align: left;
    color: #191919;
